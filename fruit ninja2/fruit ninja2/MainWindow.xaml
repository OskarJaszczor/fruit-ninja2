<Window x:Class="fruit_ninja2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fruit_ninja2"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>

        <Canvas x:Name="myCanvas" Width="800" Height="500" MouseLeftButtonDown="myCanvas_MouseLeftButtonDown" MouseLeftButtonUp="myCanvas_MouseLeftButtonUp" MouseMove="myCanvas_MouseMove">
            <Canvas.Background>
                <ImageBrush ImageSource="/background.jpg"/>
            </Canvas.Background>

            <TextBlock x:Name="score" Canvas.Left="10" TextWrapping="Wrap" Text="0" Canvas.Top="4" Height="50" Width="100" FontSize="25" TextAlignment="Center" FontFamily="Bahnschrift SemiLight" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Window>
